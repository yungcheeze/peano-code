template<int Size, typename Scalar>
bool tarch::la::equals (
  const Vector<Size,Scalar>&  lhs,
  const Scalar&               cmp,
  const Scalar                tolerance 
) {
  for ( int i=0; i < Size; i++ ) {
    if ( la::abs(lhs(i) - cmp) > tolerance ) {
      return false;
    }
  }
  return true;
}


template<int Size, typename Scalar>
bool tarch::la::oneEquals (
  const Vector<Size,Scalar>&  lhs,
  const Scalar&               cmp,
  const Scalar                tolerance
) {
  for ( int i=0; i < Size; i++ ) {
    if ( la::abs(lhs(i) - cmp) <= tolerance ) {
      return true;
    }
  }
  return false;
}


