#include "tarch/Assertions.h"


template<int Size, typename Scalar>
tarch::la::Vector<Size,Scalar>& tarch::la::operator*= (
  Vector<Size,Scalar>&  vector,
  const Scalar&         scalar
) {
  #ifdef CompilerICC
  #pragma forceinline recursive
  #endif
  for (int i=0; i < Size; i++) {
    vector(i) *= scalar;
  }
  return vector;
}


template<int Size, typename Scalar>
tarch::la::Vector<Size,Scalar>& tarch::la::operator/= (
  Vector<Size,Scalar>&  vector,
